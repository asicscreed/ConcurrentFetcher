{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "importHelpers": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "inlineSources": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
